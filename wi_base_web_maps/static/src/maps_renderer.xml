<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="wi_base_web_maps.MapsRenderer">
        <t t-if="env.isSmall">
            <div
                class="row g-0 o-sm-pin-list-container"
                t-att-class="{ 'h-100': expendedPinList }"
            >
                <t t-call="wi_base_web_maps.MapsRenderer.PinListContainer" />
            </div>
        </t>
        <div
            class="o-maps-renderer row g-0"
            t-att-class="{ 'd-none': expendedPinList }"
            id="content-maps"
        >
            <t t-if="!env.isSmall">
                <t t-call="wi_base_web_maps.MapsRenderer.PinListContainer" />
            </t>
            <div class="h-100 col col-md-10" id="maps-view-coordinate">
                <t t-if="props.model.data.routingError">
                    <t t-call="wi_base_web_maps.MapsRenderer.RountingUnavailable" />
                </t>
                <t
                    t-elif="props.model.metaData.routing and !props.model.data.useMapBoxAPI"
                >
                    <t t-call="wi_base_web_maps.MapsRenderer.NoMapToken" />
                </t>
                <t t-if="props.model.data.fetchingCoordinates">
                    <t t-call="wi_base_web_maps.MapsRenderer.FetchingCoordinates" />
                </t>
                <div class="o-maps-renderer--container h-100" t-ref="mapContainer" />
            </div>
        </div>
    </t>

    <t t-name="wi_base_web_maps.MapsRenderer.FetchingCoordinates">
        <div
            class="alert alert-info col col-md-10 px-5 mb-0 text-center position-absolute o-maps-renderer--alert"
            role="status"
        >
            <i class="fa fa-spin fa-circle-o-notch" /> Locating new addresses...
        </div>
    </t>

    <t t-name="wi_base_web_maps.MapsRenderer.NoMapToken">

        <div
            class="alert alert-info alert-dismissible col col-md-10 px-5 mb-0 text-center position-absolute o-maps-renderer--alert"
            role="status"
        >
            To get routing on your map, you first need to set up your MapBox token. It's free.
            <a href="/web#action=base_setup.action_general_configuration" class="ml8">
                <i class="oi oi-arrow-right" />
                Set up token
            </a>
            <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
            />
        </div>
    </t>

    <t t-name="wi_base_web_maps.MapsRenderer.PinListContainer">
        <div
            class="o-maps-renderer--pin-list-container col-12 col-md-2 bg-view border-start cursor-default h-100"
        >
            <div class="o-maps-view--buttons">
                <a
                    class="btn btn-primary"
                    t-att-href="googleMapUrl"
                    target="_blank"
                    data-hotkey="m"
                >View in Google Maps</a>
            </div>

            <!-- HEADER -->
            <t t-if="!props.model.metaData.hideTitle">
                <header
                    class="o-maps-renderer--pin-list-header o_pin_list_header text-uppercase px-0 py-md-2 d-flex align-items-baseline"
                    t-on-click="togglePinList"
                >
                    <i class="fa fa-list me-2 text-primary" />
                    <span
                        class="fs-6 fw-bold text-truncate"
                        t-out="props.model.metaData.panelTitle"
                    />
                    <i
                        t-if="env.isSmall"
                        class="fa float-end ms-auto"
                        t-att-class="{
                        'fa-caret-down': expendedPinList,
                        'fa-caret-left': !expendedPinList
                    }"
                    />
                </header>
            </t>

            <!-- COORDINATE LIST -->
            <t t-if="canDisplayPinList and props.model.data.isGrouped">
                <t
                    t-foreach="props.model.data.recordGroups"
                    t-as="groupId"
                    t-key="groupId"
                >
                    <div class="o-maps-renderer--pin-list-group mb-1">
                        <t
                            t-set="group"
                            t-value="props.model.data.recordGroups[groupId]"
                        />
                        <div
                            class="o-maps-renderer--pin-list-group-header d-flex align-items-baseline"
                            t-on-click="() => this.toggleGroup(groupId)"
                        >
                            <i
                                t-attf-class="fa fa-caret-{{ state.closedGroupIds.includes(groupId) ? 'right' : 'down' }}"
                            />
                            <span
                                class="ms-1"
                                t-att-style="'color:' + getGroupColor(groupId)"
                            >
                                <t t-call="wi_base_web_maps.pinSVG">
                                    <t
                                        t-set="numbering"
                                        t-value="props.model.metaData.numbering"
                                    />
                                </t>
                            </span>
                            <t t-if="group.name" t-esc="group.name" />
                            <t t-else="">Undefined</t>
                        </div>
                        <t t-if="!state.closedGroupIds.includes(groupId)">
                            <t t-call="wi_base_web_maps.MapsRenderer.PinList">
                                <t t-set="records" t-value="group.records" />
                            </t>
                        </t>
                    </div>
                </t>
            </t>
            <t t-elif="canDisplayPinList">
                <t t-call="wi_base_web_maps.MapsRenderer.PinList">
                    <t t-set="records" t-value="props.model.data.records" />
                </t>
            </t>
        </div>
    </t>

    <t t-name="wi_base_web_maps.MapsRenderer.PinList">
        <t
            t-tag="props.model.metaData.numbering ? 'ol' : 'ul'"
            t-att-class="{'o-maps-renderer--pin-located': !props.model.metaData.numbering}"
            class="o-maps-renderer--pin-list-details ps-0 pb-0"
        >
            <t t-call="wi_base_web_maps.MapsRenderer.PinListItems" />
        </t>
    </t>

    <t t-name="wi_base_web_maps.MapsRenderer.PinListItems">
        <t t-foreach="records" t-as="record" t-key="record.id">
            <t
                t-set="latitude"
                t-value="record.location and record.location.location_latitude"
            />
            <t
                t-set="longitude"
                t-value="record.location and record.location.location_longitude"
            />
            <li
                t-if="latitude and longitude"
                t-on-click.prevent="() => this.centerAndOpenPin(record)"
                class="text-truncate cursor-pointer o-maps-renderer--pin-located"
            >
                <t t-esc="record.display_name" />
            </li>
        </t>
    </t>

    <t t-name="wi_base_web_maps.MapsRenderer.RountingUnavailable">
        <div
            class="alert alert-warning alert-dismissible col col-md-10 px-5 mb-0 text-center position-absolute o-maps-renderer--alert"
            role="status"
        >
            <strong>Unsuccessful routing request: </strong>
            <t t-esc="props.model.data.routingError" />
            <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
            />
        </div>
    </t>

    <t t-name="wi_base_web_maps.marker">
        <div t-att-style="color and ('color:' + color)">
            <t t-call="wi_base_web_maps.pinSVG" />
            <t t-if="numbering" t-call="wi_base_web_maps.markerNumber" />
            <t t-elif="isMulti" t-call="wi_base_web_maps.markerBadge" />
        </div>
    </t>

    <t t-name="wi_base_web_maps.markerBadge">
        <span
            class="badge text-bg-danger rounded-pill o-maps-renderer--marker-badge"
            t-att-style="color and `background-color: ${color} !important`"
        >
            <t t-esc="count" />
        </span>
    </t>

    <t t-name="wi_base_web_maps.markerNumber">
        <p class="o-maps-renderer--marker-number position-relative text-center">
            <t t-esc="number" />
            <t t-if="count gt 1">
                <t t-call="wi_base_web_maps.markerBadge" />
            </t>
        </p>
    </t>

    <t t-name="wi_base_web_maps.markerPopup">
        <div>
            <table class="o-maps-renderer--popup-table align-top">
                <thead>
                    <tr>
                        <th colspan="2" />
                        <th />
                        <th />
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="fields" t-as="field" t-key="field.id">
                        <td
                            class="o-maps-renderer--popup-table-content-name fw-bold text-nowrap align-baseline"
                        >
                            <t t-esc="field.string" />
                        </td>
                        <td class="o-maps-renderer--popup-table-space" />
                        <td
                            class="o-maps-renderer--popup-table-content-value align-baseline"
                        >
                            <t t-esc="field.value" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <div
                class="o-maps-renderer--popup-buttons d-flex align-item-end justify-content-start mt8"
            >
                <t t-if="hasFormView">
                    <button class="btn btn-primary o-maps-renderer--popup-buttons-open">
                        Open
                    </button>
                </t>
                <div
                    class="o-maps-renderer--popup-buttons-divider d-inline-block h-auto"
                />
                <a
                    class="btn btn-primary"
                    role="button"
                    t-att-href="url"
                    target="_blank"
                >
                    Navigate to
                </a>
            </div>
        </div>
    </t>

    <t t-name="wi_base_web_maps.pinSVG">
        <t t-if="numbering">
            <t t-call="wi_base_web_maps.pinNoCircleSVG" />
        </t>
        <t t-else="">
            <t t-call="wi_base_web_maps.pinCircleSVG" />
        </t>
    </t>

