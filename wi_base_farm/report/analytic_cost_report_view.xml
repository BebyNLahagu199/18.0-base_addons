<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Blocks Cost -->
    <record id="blocks_cost_view_pivot" model="ir.ui.view">
        <field name="name">blocks.cost.view.pivot</field>
        <field name="model">account.analytic.line</field>
        <field name="arch" type="xml">
            <pivot string="Blocks Cost Report" sample="1">
                <field name="date" interval="month" type="col" />
                <field name="amount" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="blocks_cost_view_graph" model="ir.ui.view">
        <field name="name">blocks.cost.view.graph</field>
        <field name="model">account.analytic.line</field>
        <field name="arch" type="xml">
            <graph string="Blocks Cost Report" sample="1">
                <field name="unit_amount" type="measure" />
                <field name="amount" type="measure" />
            </graph>
        </field>
    </record>

    <record id="blocks_cost_report_action" model="ir.actions.act_window">
        <field name="name">Blocks Cost Report</field>
        <field name="res_model">account.analytic.line</field>
        <field name="view_mode">list,kanban,form,graph,pivot</field>
        <field
            name="search_view_id"
            ref="account.view_account_analytic_line_filter_inherit_account"
        />
        <field name="domain">[('operation_type_id', '!=', False)]</field>
        <field name="context">{'create': false, 'edit': false}</field>
    </record>

    <record
        id="blocks_cost_report_action_pivot_view"
        model="ir.actions.act_window.view"
    >
        <field name="sequence" eval="3" />
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="blocks_cost_view_pivot" />
        <field name="act_window_id" ref="blocks_cost_report_action" />
    </record>

    <record
        id="blocks_cost_report_action_graph_view"
        model="ir.actions.act_window.view"
    >
        <field name="sequence" eval="4" />
        <field name="view_mode">graph</field>
        <field name="view_id" ref="blocks_cost_view_graph" />
        <field name="act_window_id" ref="blocks_cost_report_action" />
    </record>

    <!-- Operating Cost -->
    <record id="operating_cost_view_pivot" model="ir.ui.view">
        <field name="name">operating.cost.view.pivot</field>
        <field name="model">account.analytic.line</field>
        <field name="arch" type="xml">
            <pivot string="Operating Cost Report" sample="1">
                <field name="operation_type_id" type="row" />
                <field name="date" interval="month" type="col" />
                <field name="amount" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="operating_cost_view_graph" model="ir.ui.view">
        <field name="name">operating.cost.view.graph</field>
        <field name="model">account.analytic.line</field>
        <field name="arch" type="xml">
            <graph string="Operating Cost Report" sample="1">
                <field name="operation_type_id" type="row" />
                <field name="unit_amount" type="measure" />
                <field name="amount" type="measure" />
            </graph>
        </field>
    </record>

    <record id="operating_cost_report_action" model="ir.actions.act_window">
        <field name="name">Operating Cost Report</field>
        <field name="res_model">account.analytic.line</field>
        <field name="view_mode">list,kanban,form,graph,pivot</field>
        <field
            name="search_view_id"
            ref="account.view_account_analytic_line_filter_inherit_account"
        />
        <field name="domain">[('operation_type_id', '!=', False)]</field>
        <field name="context">{'create': false, 'edit': false}</field>
    </record>

    <record
        id="operating_cost_report_action_pivot_view"
        model="ir.actions.act_window.view"
    >
        <field name="sequence" eval="3" />
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="operating_cost_view_pivot" />
        <field name="act_window_id" ref="operating_cost_report_action" />
    </record>

    <record
        id="operating_cost_report_action_graph_view"
        model="ir.actions.act_window.view"
    >
        <field name="sequence" eval="4" />
        <field name="view_mode">graph</field>
        <field name="view_id" ref="operating_cost_view_graph" />
        <field name="act_window_id" ref="operating_cost_report_action" />
    </record>

</odoo>
