<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="material_usage_report_view_tree" model="ir.ui.view">
        <field name="name">material.usage.report.view.tree</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <list name="Material Usage" default_order="operation_date desc">
                <field name="operation_id" />
                <field name="operation_date" />
                <field name="activity_id" />
                <field name="location_id" />
                <field name="product_id" />
                <field name="product_qty" sum="Total" />
                <field name="product_standard_price" />
                <field name="product_uom_id" />
            </list>
        </field>
    </record>

    <record id="material_usage_report_view_graph" model="ir.ui.view">
        <field name="name">material.usage.report.view.graph</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <graph string="Material Usage" type="bar" stacked="False">
                <field name="operation_date" interval="month" />
                <field name="product_id" type="row" />
                <field name="product_qty" type="measure" />
            </graph>
        </field>
    </record>

    <record id="material_usage_report_view_pivot" model="ir.ui.view">
        <field name="name">material.usage.report.view.pivot</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <pivot string="Material Usage" sample="1">
                <field name="product_id" type="row" />
                <field name="location_id" type="row" />
                <field name="product_qty" type="measure" />
                <field name="product_standard_price" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="material_usage_report_view_search" model="ir.ui.view">
        <field name="name">material.usage.report.view.search</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <search string="Material Usage">
                <field name="operation_id" />
                <field name="activity_id" />
                <field name="location_id" />
                <field name="product_id" />
                <filter name="filter_date" string="Date" date="operation_date" />
                <group expand="0" string="Group By">
                    <filter
                        name="group_activity_id"
                        string="Activity"
                        context="{'group_by':'activity_id'}"
                    />
                    <filter
                        name="group_location_id"
                        string="Block"
                        context="{'group_by':'location_id'}"
                    />
                    <filter
                        name="group_operation_id"
                        string="Operation"
                        context="{'group_by':'operation_id'}"
                    />
                    <filter
                        name="group_product_id"
                        string="Product"
                        context="{'group_by':'product_id'}"
                    />
                    <filter
                        name="group_operation_date"
                        string="Date"
                        context="{'group_by':'operation_date'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="material_usage_report_action" model="ir.actions.act_window">
        <field name="name">Material Usage</field>
        <field name="res_model">material.usage.report</field>
        <field name="view_mode">list,graph,pivot</field>
        <field name="search_view_id" ref="material_usage_report_view_search" />
        <field name="context">{'create':False,'edit':False}</field>
    </record>

</odoo>
