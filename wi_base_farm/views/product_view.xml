<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Product Category Form View -->
    <record id="product_category_form_view_inherit_farm" model="ir.ui.view">
        <field name="name">product.category.stock.property.form.inherit.farm</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="stock.product_category_form_view_inherit" />
        <field name="arch" type="xml">
            <group name="logistics" position="after">
                <group string="Farm Setup">
                    <field name="farm_data" widget="boolean_toggle" />
                </group>
            </group>
        </field>
    </record>

    <!-- Product Product Form View -->
    <record id="product_normal_form_view_inherit_farm" model="ir.ui.view">
        <field name="name">product.product.form.inherit.farm</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="after">
                <group string="Farm Setup">
                    <field name="farm_data" widget="boolean_toggle" />
                </group>
            </xpath>
        </field>
    </record>

    <!-- Product Template Action -->
    <record id="action_farm_product_template_view" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,list,form,activity</field>
        <field name="domain">[('farm_data','=', True)]</field>
        <field name="context" eval="{'default_farm_data': True}" />
    </record>

    <!-- Product Product Action -->
    <record id="action_farm_product_variant_view" model="ir.actions.act_window">
        <field name="name">Product Variants</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('farm_data','=', True)]</field>
        <field name="context" eval="{'default_farm_data': True}" />
    </record>

</odoo>
