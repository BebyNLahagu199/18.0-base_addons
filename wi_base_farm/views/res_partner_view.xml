<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.farm</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='misc']" position="before">
                <group string="Farm" name="farm">
                    <field name="farm_data" widget="boolean_toggle" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.farm</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter
                    string="Farm Data"
                    name="farm"
                    domain="[('farm_data','=', True)]"
                />
                <separator />
            </xpath>
        </field>
    </record>

</odoo>
