<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- List View -->
    <record id="estate_estate_view_list" model="ir.ui.view">
        <field name="name">estate.estate.view.list</field>
        <field name="model">estate.estate</field>
        <field name="arch" type="xml">
            <list>
                <field name="display_name"/>
                <field name="code"/>
                <field name="location_type"/>
                <field name="company_id" optional="hide" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="estate_estate_view_form" model="ir.ui.view">
        <field name="name">estate.estate.view.form</field>
        <field name="model">estate.estate</field>
        <field name="arch" type="xml">
            <form string="Estate">
                <sheet>
                    <!-- Title -->
                    <field name="qr_code" widget="image" class="oe_avatar"/>
                    <div class="oe_title mb16">
                        <field name="active" invisible="1"/>
                        <field name="location_type" widget="radio" options="{'horizontal': true}" class="oe_edit_only"/>
                        <h1>
                            <field name="name" required="1" placeholder="Name" default_focus="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="parent_id" placeholder="Parent Estate"
                                   domain="[('location_type','=','estate')]" invisible="location_type != 'afdeling'"/>
                        </div>
                    </div>
                    <!-- Info Group -->
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="partner_id"/>
                        </group>
                    </group>

                    <!-- Tabs -->
                    <notebook>
                        <page name="afdeling" string="Afdeling" invisible="location_type != 'estate'">
                            <field name="child_ids" mode="kanban"
                                   context="{'default_parent_id': id, 'kanban_view_ref': 'wi_base_farm.estate_estate_kanban_view'}"/>
                        </page>

                        <page name="block" string="Block" invisible="location_type != 'afdeling'">
                            <field name="block_ids" mode="kanban"
                                   context="{'default_estate_id': id, 'kanban_view_ref': 'wi_base_farm.estate_block_kanban_view'}"/>
                        </page>

                        <page name="location" string="Location">
                            <group>
                                <group name="Address" string="address">
                                    <label for="street" string="Private Address"/>
                                    <div class="o_address_format">
                                        <field
                                                name="street"
                                                placeholder="Street..."
                                                class="o_address_street"
                                        />
                                        <field
                                                name="street2"
                                                placeholder="Street 2..."
                                                class="o_address_street"
                                        />
                                        <field
                                                name="city"
                                                placeholder="City"
                                                class="o_address_city"
                                        />
                                        <field
                                                name="state_id"
                                                class="o_address_state"
                                                placeholder="State"
                                                options="{'no_open': True, 'no_quick_create': True}"
                                                context="{'default_country_id': country_id}"
                                        />
                                        <field
                                                name="zip_code"
                                                placeholder="ZIP"
                                                class="o_address_zip"
                                        />
                                        <field
                                                name="country_id"
                                                class="o_address_country"
                                                placeholder="Country"
                                                options="{'no_open': True, 'no_quick_create': True}"
                                        />
                                    </div>
                                </group>
                                <group name="inventory" string="Inventory">
                                    <field name="warehouse_id"/>
                                    <field name="harvest_location_id"/>
                                    <field name="stock_location_id"/>
                                    <field
                                            name="harvest_product_uom_category_id"
                                            invisible="1"
                                    />
                                    <field
                                            name="harvest_other_product_uom_category_id"
                                            invisible="1"
                                    />
                                    <label
                                            for="harvest_product_id"
                                            invisible="location_type != 'afdeling'"
                                    />
                                    <div
                                            class="o_row"
                                            invisible="location_type != 'afdeling'"
                                    >
                                        <field
                                                name="harvest_product_id"
                                                class="oe_inline"
                                                nolabel="1"
                                        />
                                        <field
                                                name="harvest_product_uom_id"
                                                nolabel="1"
                                                class="pl-1 pl-sm-0"
                                                required="location_type != 'estate'"
                                        />
                                    </div>
                                    <label
                                            for="harvest_other_product_id"
                                            invisible="location_type != 'afdeling'"
                                    />
                                    <div
                                            class="o_row"
                                            invisible="location_type != 'afdeling'"
                                    >
                                        <field
                                                name="harvest_other_product_id"
                                                class="oe_inline"
                                                nolabel="1"
                                        />
                                        <field
                                                name="harvest_other_product_uom_id"
                                                nolabel="1"
                                                class="pl-1 pl-sm-0"
                                                required="location_type != 'estate'"
                                        />
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page name="config" string="Configuration" invisible="location_type != 'estate'">
                            <group>
                                <group string="Premi">
                                    <field name="premi_ids" nolabel="1">
                                        <list editable="bottom">
                                            <field name="job_id"/>
                                            <field name="premi_multiplier"/>
                                        </list>
                                    </field>
                                </group>
                                <group string="Quantity">
                                    <field name="planned_optimal"/>
                                    <field name="premi_optimal"/>
                                    <field name="planned_maximum"/>
                                    <field name="premi_maximum"/>
                                </group>
                                <group string="Quality">
                                    <field name="premi_quality_ids" nolabel="1">
                                        <list editable="bottom">
                                            <field name="currency_id" column_invisible="1"/>
                                            <field name="operator_type"/>
                                            <field name="quality_percentage"/>
                                            <field name="amount_earned"/>
                                        </list>
                                    </field>
                                </group>
                            </group>
                        </page>

                        <page name="internal_notes" string="Internal Notes">
                            <field name="note" placeholder="Internal Note..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="estate_estate_kanban_view" model="ir.ui.view">
        <field name="name">estate.estate.kanban.view</field>
        <field name="model">estate.estate</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="location_type"/>
                <field name="qr_code"/>
                <field name="company_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="d-flex">
                                <div class="o_kanban_image" style="width: 80px; height: 80px;">
                                    <field name="qr_code" widget="image"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <field name="name"/>
                                    <div>Code: <t t-esc="record.code.value"/></div>
                                    <div>Type: <t t-esc="record.location_type.value"/></div>
                                    <div>Company: <t t-esc="record.company_id.value"/></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    Search View
    <record id="view_estate_estate_search" model="ir.ui.view">
        <field name="name">estate.estate.search</field>
        <field name="model">estate.estate</field>
        <field name="arch" type="xml">
            <search>
                <!-- Search fields -->
                <field name="name" string="Name"/>
                <field name="code"/>
                <field name="parent_id"/>

                <!-- Quick filters -->
                <filter name="estate" string="Estate" domain="[('location_type','=','estate')]"/>
                <filter name="afdeling" string="Afdeling" domain="[('location_type','=','afdeling')]"/>
                <filter name="archived" string="Archived" domain="[('active','=',False)]"/>

                <!-- Group By -->
                <group expand="1" string="Group By">
                    <filter string="Type" name="location_type" context="{'group_by': 'location_type'}"/>
                    <filter string="Company" name="company_id" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Action -->
    <record id="action_farm_estate_estate_view" model="ir.actions.act_window">
        <field name="name">Estate</field>
        <field name="res_model">estate.estate</field>
        <field name="view_mode">kanban,list,form</field>
        <!--        <field name="search_view_id" ref="view_estate_estate_search"/>-->
    </record>

</odoo>
