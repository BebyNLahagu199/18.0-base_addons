<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Estate Type -->
    <record id="estate_type_view_tree" model="ir.ui.view">
        <field name="name">estate.type.view.tree</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <field name="code" />
            </list>
        </field>
    </record>

    <record id="action_estate_type_view" model="ir.actions.act_window">
        <field name="name">Estate Type</field>
        <field name="res_model">estate.type</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new estate type.
            </p>
        </field>
    </record>

    <!-- Estate Typography -->
    <record id="estate_typography_view_tree" model="ir.ui.view">
        <field name="name">estate.typography.view.tree</field>
        <field name="model">estate.typography</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <field name="code" />
            </list>
        </field>
    </record>

    <record id="action_estate_typography_view" model="ir.actions.act_window">
        <field name="name">Estate Typography</field>
        <field name="res_model">estate.typography</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new estate typography.
            </p>
        </field>
    </record>

    <!-- Area Type -->
    <record id="estate_area_type_view_tree" model="ir.ui.view">
        <field name="name">estate.area.type.view.tree</field>
        <field name="model">estate.area.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <field name="code" />
                <field name="uom_id" groups="uom.group_uom" />
            </list>
        </field>
    </record>

    <record id="action_farm_area_type_view" model="ir.actions.act_window">
        <field name="name">Estate Area Type</field>
        <field name="res_model">estate.area.type</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new estate area type.
            </p>
        </field>
    </record>

    <!-- Tree Type -->
    <record id="estate_tree_type_view_tree" model="ir.ui.view">
        <field name="name">estate.tree.type.view.tree</field>
        <field name="model">estate.tree.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <field name="code" />
                <field name="uom_id" groups="uom.group_uom" />
            </list>
        </field>
    </record>

    <record id="action_farm_tree_type_view" model="ir.actions.act_window">
        <field name="name">Estate Tree Type</field>
        <field name="res_model">estate.tree.type</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new estate tree type.
            </p>
        </field>
    </record>

    <!-- Planting State -->
    <record id="estate_planting_state_view_tree" model="ir.ui.view">
        <field name="name">estate.planting.state.view.tree</field>
        <field name="model">estate.planting.state</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <field name="code" />
            </list>
        </field>
    </record>

    <record id="action_farm_planting_state_view" model="ir.actions.act_window">
        <field name="name">Planting State</field>
        <field name="res_model">estate.planting.state</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new estate planting state.
            </p>
        </field>
    </record>

    <!-- Land -->
    <record id="estate_land_view_tree" model="ir.ui.view">
        <field name="name">estate.land.view.tree</field>
        <field name="model">estate.land</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <field name="code" />
            </list>
        </field>
    </record>

    <record id="action_farm_land_view" model="ir.actions.act_window">
        <field name="name">Land</field>
        <field name="res_model">estate.land</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new estate land.
            </p>
        </field>
    </record>

    <!-- Standard Production -->
    <record id="estate_standard_production_view_tree" model="ir.ui.view">
        <field name="name">estate.standard.production.view.tree</field>
        <field name="model">estate.standard.production</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="seeds_id" />
                <field name="land_id" />
                <field name="age" />
                <field name="hectare" />
                <field
                    name="company_id"
                    optional="hide"
                    groups="base.group_multi_company"
                />
            </list>
        </field>
    </record>

    <record id="action_farm_standard_production_view" model="ir.actions.act_window">
        <field name="name">Standard Production</field>
        <field name="res_model">estate.standard.production</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new estate standard production.
            </p>
        </field>
    </record>

    <!-- Product Category -->
    <record id="action_farm_product_category_view" model="ir.actions.act_window">
        <field name="name">Product Categories</field>
        <field name="res_model">product.category</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('farm_data','=',True)]</field>
        <field
            name="context"
            eval="{
                'default_farm_data': True
            }"
        />
    </record>

    <!-- Harvest -->
    <record id="estate_harvest_operation_type_tree_view" model="ir.ui.view">
        <field name="name">estate.harvest.operation.type.tree.view</field>
        <field name="model">estate.operation.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="code" />
                <field name="company_id" />
            </list>
        </field>
    </record>

    <record id="estate_harvest_operation_type_form" model="ir.ui.view">
        <field name="name">estate.harvest.operation.type.form.view</field>
        <field name="model">estate.operation.type</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
            <sheet>
                <div class="oe_button_box" name="button_box" />
                <field name="active" invisible="1" />
                <widget
                        name="web_ribbon"
                        title="Active"
                        bg_color="bg-danger"
                        invisible="active == True"
                    />
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="e.g. Harvesting" required="1" />
                    </h1>
                </div>
                <group name="first" col="2">
                    <group>
                        <field name="code" required='1' class="col-1" />
                        <field name="type_operation" required="1" class="col-1" />
                    </group>
                </group>
            </sheet>

        </form>
        </field>

    </record>

    <record id="estate_harvest_operation_type" model="ir.actions.act_window">
        <field name="name">Operation Type</field>
        <field name="res_model">estate.operation.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new operation type.
            </p>
        </field>
    </record>


    <!-- Penalty -->

    <record id="estate_penalty_type_form_view" model="ir.ui.view">
        <field name="name">estate.penalty.type.form.view</field>
        <field name="model">estate.activity.penalty</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active == True"
                    />
                    <div class="oe_title">
                        <label for="name" string="Penalty name" class="oe_edit_only" />
                        <h1><field
                                name="name"
                                placeholder="e.g. Harvested raw fruit"
                            /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" required="1" />
                        </group>
                        <group>
                            <field name="currency_id" invisible="1" />
                            <field
                                name="company_id"
                                required="1"
                                groups="base.group_multi_company"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page name="penalty_amount" string="Penalty Information">
                            <field
                                name="penalty_position_ids"
                                mode="list"
                                context="{'default_penalty_id': id}"
                            >
                                <list editable="bottom">
                                    <field name="job_id" />
                                    <field name="amount" />
                                </list>
                            </field>
                        </page>
                        <page name="other_info" string="Other Information">
                            <field name="note" nolabel="1" placeholder="Notes" />
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True" />
            </form>
        </field>
    </record>

    <record id="estate_penalty_type_tree_view" model="ir.ui.view">
        <field name="name">estate.penalty.type.tree.view</field>
        <field name="model">estate.activity.penalty</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="hide"
                />
            </list>
        </field>
    </record>

    <record id="estate_harvest_penalty_type" model="ir.actions.act_window">
        <field name="name">Penalty</field>
        <field name="res_model">estate.activity.penalty</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new penalty type.
            </p>
        </field>
    </record>

    <!-- Estate Harvest Team  -->

    <record id="estate_harvest_team_form" model="ir.ui.view">
        <field name="name">estate.harvest.team.form.view</field>
        <field name="model">estate.harvest.team</field>
        <field name="arch" type="xml">
            <form string="Harvest Team" class="o_crm_team_form_view">
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="text-bg-danger"
                        invisible="active"
                    />
                    <div class="oe_title">
                        <label for="name" string="Harvest Team" />
                        <h1>
                            <field
                                class="text-break"
                                name="name"
                                placeholder="e.g. North America"
                            />
                        </h1>
                        <div name="options_active" class="o_row" />
                    </div>
                    <group>
                        <group name="left" string="Team Details">
                            <group>
                                <field name="manager_id" widget="many2one_avatar" />
                                <field name="foreman_id" widget="many2one_avatar" />
                                <field name="clerk_id" widget="many2one_avatar" />
                            </group>
                            <group>
                                <field name="assistant_id" widget="many2one_avatar" />
                                <field name="recorder_id" widget="many2one_avatar" />
                            </group>
                        </group>
                        <group name="right" string="Other Info">
                            <field name="active" invisible="1" />
                            <field name="company_id" options="{'no_create': True}" />
                            <field name="currency_id" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Members" name="members_employee">
                            <field name="labour_ids" mode="kanban" class="w-100">
                                <kanban>
                                    <field name="id" />
                                    <field name="name" />
                                    <field name="work_email" />
                                    <field name="avatar_128" />
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div
                                                class="oe_kanban_card oe_kanban_global_click"
                                            >
                                                <div
                                                    class="o_kanban_card_content d-flex"
                                                >
                                                    <div>
                                                        <img
                                                            t-att-src="kanban_image('hr.employee', 'avatar_128', record.id.raw_value)"
                                                            class="o_kanban_image o_image_64_cover"
                                                            alt="Avatar"
                                                        />
                                                    </div>
                                                    <div
                                                        class="oe_kanban_details d-flex flex-column ms-3"
                                                    >
                                                        <strong
                                                            class="o_kanban_record_title oe_partner_heading"
                                                        ><field name="name" /></strong>
                                                        <div
                                                            class="d-flex align-items-baseline text-break"
                                                        >
                                                            <i
                                                                class="fa fa-briefcase me-1"
                                                                role="img"
                                                                aria-label="Job Position"
                                                                title="Job Position"
                                                            /><field name="job_id" />
                                                        </div>
                                                        <div
                                                            class="d-flex align-items-baseline text-break"
                                                        >
                                                            <i
                                                                class="fa fa-envelope me-1"
                                                                role="img"
                                                                aria-label="Email"
                                                                title="Email"
                                                            /><field
                                                                name="work_email"
                                                            />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True" />
            </form>
        </field>
    </record>

    <record id="estate_harvest_team_tree_view" model="ir.ui.view">
        <field name="name">estate.harvest.team.tree.view</field>
        <field name="model">estate.harvest.team</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="hide"
                />
            </list>
        </field>
    </record>

    <record id="action_estate_harvest_team" model="ir.actions.act_window">
        <field name="name">Harvest Team</field>
        <field name="res_model">estate.harvest.team</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create team.
            </p>
        </field>
    </record>
</odoo>
