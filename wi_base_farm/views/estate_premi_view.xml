<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Premi Condition Form -->
    <record id="estate_premi_additional_condition_form" model="ir.ui.view">
        <field name="name">estate.premi.condition.form</field>
        <field name="model">estate.premi.condition</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="condition" required="1" />
                        <field name="condition_day" invisible="condition != 'by_day'" />
                        <field
                            name="harvest_base_qty"
                            invisible="premi_type != 'monthly_harvest'"
                        />
                        <field name="premi_type" invisible="1" />
                        <field name="company_id" invisible="1" />
                        <field name="currency_id" invisible="1" />
                    </group>
                    <notebook>
                        <page
                            name="section_harvest"
                            string="Setup Rules"
                            invisible="premi_type != 'monthly_harvest'"
                        >
                            <field name="premi_quantifier_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="premi_id" column_invisible="True" />
                                    <field name="currency_id" column_invisible="True" />
                                    <field
                                        name="base_quantifier"
                                        column_invisible="True"
                                    />
                                    <field name="quantifier" />
                                    <field name="premi_extra" />
                                    <field name="attendance_premi" />
                                </list>
                            </field>
                        </page>
                        <page
                            name="section_upkeep"
                            string="Setup Premi"
                            invisible="premi_type  == 'monthly_harvest'"
                        >
                            <group>
                                <field name="premi_amount" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Estate Premi Form -->
    <record id="estate_premi_view_form" model="ir.ui.view">
        <field name="name">estate.premi.form</field>
        <field name="model">estate.premi</field>
        <field name="arch" type="xml">
            <form string="Premi Payment">
                <sheet>
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active ==True"
                    />
                    <field name="premi_type" invisible="1" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="account_activity_id" required="1" />
                            <field name="country_id" invisible="True" />
                            <field
                                name="state_id"
                                options="{'no_open': True,'no_create': True}"
                            />
                            <field name="company_id" />
                            <field name="currency_id" invisible="True" />
                            <field name="use_condition" />
                            <field
                                name="minimal_unit"
                                invisible="premi_type == 'monthly_harvest'"
                            />
                            <field
                                name="force_premi_amount"
                                invisible="premi_type == 'monthly_harvest'"
                            />
                        </group>
                        <group invisible="premi_type != 'non_harvest'">
                            <field
                                name="premi_amount"
                                widget='monetary'
                                options="{'currency_field': 'currency_id'}"
                            />
                        </group>
                        <group invisible="premi_type != 'loaded_premi'">
                            <field name="qty_loaded" />
                            <field
                                name="qty_uom"
                                required="premi_type == 'loaded_premi'"
                            />
                            <field
                                name="price_per_qty"
                                options="{'currency_field': 'currency_id'}"
                            />
                            <field name="total_days" />
                            <field name="loaded_premi_type" />
                        </group>
                    </group>
                    <notebook>
                        <page
                            string="Monthly Harvest Premi"
                            invisible="premi_type != 'monthly_harvest'"
                        >
                            <group>
                                <group string="Information">
                                    <field
                                        name="estate_block_id"
                                        required="premi_type == 'monthly_harvest'"
                                    />
                                    <field name="planted_year" readonly="1" />
                                    <label for="start_month" string="From" />
                                    <div class="o_row">
                                        <field
                                            name="start_month"
                                            required="premi_type == 'monthly_harvest'"
                                        />
                                        to
                                        <field
                                            name="end_month"
                                            required="premi_type == 'monthly_harvest'"
                                        />
                                    </div>
                                    <label for="harvest_base_qty" />
                                    <div class="o_row">
                                        <field
                                            name="harvest_base_qty"
                                            class="oe_inline"
                                        />
                                        <field
                                            name="qty_uom"
                                            nolabel="1"
                                            readonly="1"
                                            force_save="1"
                                        />
                                    </div>
                                    <field name="other_harvest_premi" />
                                </group>
                                <group string="Rule">
                                    <field
                                        name="premi_quantifier_ids"
                                        nolabel="1"
                                        colspan="2"
                                    >
                                        <list editable="bottom">
                                            <field
                                                name="premi_id"
                                                column_invisible="True"
                                            />
                                            <field
                                                name="base_quantifier"
                                                column_invisible="True"
                                            />
                                            <field
                                                name="currency_id"
                                                column_invisible="True"
                                            />
                                            <field name="quantifier" />
                                            <field name="premi_extra" />
                                            <field name="attendance_premi" />
                                        </list>
                                    </field>
                                </group>
                            </group>
                        </page>
                        <page
                            name="condition_harvest"
                            string="Condition"
                            invisible="not use_condition"
                        >
                            <field name="premi_condition_ids">
                                <list>
                                    <field name="company_id" column_invisible="true" />
                                    <field name="currency_id" column_invisible="true" />
                                    <field name="condition" />
                                    <field name="condition_day" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview" />
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="estate_premi_view_tree" model="ir.ui.view">
        <field name="name">estate.premi.tree</field>
        <field name="model">estate.premi</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <!-- <field name="activity_id" /> -->
                <field name="premi_type" widget="badge" />
            </list>
        </field>
    </record>

    <record id="estate_harvest_premi_view_tree" model="ir.ui.view">
        <field name="name">estate.premi.view.tree.inherit</field>
        <field name="model">estate.premi</field>
        <field name="inherit_id" ref="wi_base_farm.estate_premi_view_tree" />
        <field name="arch" type="xml">
            <field name="premi_type" position="after">
                <field
                    name="start_month"
                    column_invisible="context.get('default_premi_type') != 'monthly_harvest'"
                />
                <field
                    name="end_month"
                    column_invisible="context.get('default_premi_type') != 'monthly_harvest'"
                />
            </field>
        </field>
    </record>

    <record id="estate_premi_view_search" model="ir.ui.view">
        <field name="name">estate.premi.search</field>
        <field name="model">estate.premi</field>
        <field name="arch" type="xml">
            <search string="Premi Payment">
                <field name="name" />
                <filter
                    name="active"
                    string="Archived"
                    domain="[('active', '=', False)]"
                    help="Archived record"
                />
            </search>
        </field>
    </record>

    <!-- Action Windows for Estate Premi-->
    <record id="action_estate_non_harvest_premi_view" model="ir.actions.act_window">
        <field name="name">Non-Harvest Premi</field>
        <field name="res_model">estate.premi</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="estate_premi_view_tree" />
        <field name="domain">[('premi_type','=','non_harvest')]</field>
        <field name="context">{'default_premi_type':'non_harvest'}</field>
    </record>

    <record id="action_estate_loaded_premi_view" model="ir.actions.act_window">
        <field name="name">Loaded Premi</field>
        <field name="res_model">estate.premi</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="estate_premi_view_tree" />
        <field name="domain">[('premi_type','=','loaded_premi')]</field>
        <field name="context">{'default_premi_type':'loaded_premi'}</field>
    </record>

    <record id="action_estate_harvest_premi_view" model="ir.actions.act_window">
        <field name="name">Harvest Premi</field>
        <field name="res_model">estate.premi</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="estate_harvest_premi_view_tree" />
        <field name="domain">[('premi_type','=','monthly_harvest')]</field>
        <field name="context">{'default_premi_type':'monthly_harvest'}</field>
    </record>

    <!-- Estate Premi Operation Daily -->
    <record id="estate_premi_operation_daily_view_tree" model="ir.ui.view">
        <field name="name">estate.premi.operation.daily.view.tree</field>
        <field name="model">estate.premi.operation.daily</field>
        <field name="arch" type="xml">
            <list>
                <field name="operation_date" />
                <field name="name" />
                <field name="user_id" widget="many2one_avatar" />
                <field name="employee_id" widget="many2one_avatar" />
                <field name="job_id" />
                <field name="premi_total" />
                <field name="currency_id" column_invisible="1" />
                <field
                    name="state"
                    widget="badge"
                    decoration-success="state == 'posted' or state == 'done'"
                    decoration-info="state == 'draft'"
                    decoration-danger="state =='cancel'"
                />
            </list>
        </field>
    </record>

    <record id="estate_premi_operation_daily_view_kanban" model="ir.ui.view">
        <field name="name">estate.premi.operation.daily.view.kanban</field>
        <field name="model">estate.premi.operation.daily</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="currency_id" />
                <field name="employee_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-6">
                                   <field
                                        name="employee_id"
                                        widget="many2one_avatar_user"
                                        options="{'display_avatar_name': True}"
                                        readonly="state not in ['draft', 'verify']"
                                        class="fw-bold"
                                    />
                                </div>
                                <div class="col-6">
                                    <span class="float-end badge text-bg-secondary">
                                        <field name="state" />
                                    </span>
                                </div>
                                <div class="col-12">
                                    <b><span><field
                                                name="name"
                                                readonly="state in ['cancel', 'done', 'paid']"
                                            /></span></b>
                                </div>
                                <div class="col-12">
                                    <span><field
                                            name="reference"
                                            readonly="state in ['cancel', 'done', 'paid']"
                                        /></span>
                                </div>
                                <div class="col-12">
                                    <span>Total Premi - <field
                                            name="premi_total"
                                        /></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_premi_operation_daily_view_pivot" model="ir.ui.view">
        <field name="name">estate.premi.operation.daily.view.pivot</field>
        <field name="model">estate.premi.operation.daily</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="operation_date" type="col" />
                <field name="estate_id" type="row" />
                <field name="employee_id" type="row" />
                <field name="premi_total" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="estate_premi_operation_daily_view_form" model="ir.ui.view">
        <field name="name">estate.premi.operation.daily.view.form</field>
        <field name="model">estate.premi.operation.daily</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                    <button
                        name="action_post"
                        string="Confirm"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'draft'"
                    />
                    <button
                        name="action_draft"
                        string="Reset Draft"
                        type="object"
                        class="btn-secondary"
                        invisible="state != 'cancel'"
                    />
                    <button
                        name="action_done"
                        string="Locked"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'posted'"
                    />
                    <button
                        name="action_unlock"
                        string="Unlock"
                        type="object"
                        class="btn-secondary"
                        invisible="state != 'done'"
                    />
                    <button
                        name="action_cancel"
                        string="Cancel"
                        type="object"
                        class="btn-secondary"
                        invisible="state not in ('draft','posted')"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,posted"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="estate_id" readonly="state != 'draft'" />
                            <field
                                name="employee_id"
                                widget="many2one_avatar"
                                readonly="state != 'draft'"
                            />
                            <field name="job_id" invisible="1" />
                            <field name="work_as" readonly="state != 'draft'" />
                            <field name="currency_id" invisible="1" />
                        </group>
                        <group>
                            <field name="operation_date" readonly="state != 'draft'" />
                            <label for="premi_multiplier" />
                            <div class="o_row">
                                <field
                                    name="premi_multiplier"
                                    readonly="state != 'draft'"
                                /> %
                            </div>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                options="{'no_create': True, 'no_open': True}"
                                readonly="state != 'draft'"
                            />
                            <field name="company_id" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="source_premi" string="Source Premi">
                            <field
                                name="source_ids"
                                mode="list"
                                readonly="state != 'draft'"
                            >
                                <list editable="bottom">
                                    <field
                                        name="employee_id"
                                        widget="many2one_avatar"
                                    />
                                    <field name="job_id" />
                                    <field name="total_premi" />
                                    <field name="currency_id" column_invisible="1" />
                                </list>
                            </field>
                            <group>
                                <group class="oe_subtotal_footer oe_right" colspan="2">
                                    <field
                                        name="additional_premi"
                                        readonly="state != 'draft'"
                                    />
                                    <field name="penalty_deduction" />
                                    <field name="premi_total" />
                                </group>
                            </group>
                        </page>
                        <page name="other_information" string="Other Information">
                            <group>
                                <group>
                                    <field
                                        name="user_id"
                                        widget="many2one_avatar"
                                        readonly="state != 'draft'"
                                    />
                                    <field
                                        name="reference"
                                        readonly="state != 'draft'"
                                    />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <record id="estate_premi_operation_daily_view_search" model="ir.ui.view">
        <field name="name">estate.premi.operation.daily.view.search</field>
        <field name="model">estate.premi.operation.daily</field>
        <field name="arch" type="xml">
            <search string="Premi Operation Daily">
                <field name="name" />
                <filter
                    name="filter_draft"
                    string="Draft"
                    domain="[('state', '=', 'draft')]"
                />
                <filter
                    name="filter_posted"
                    string="Posted"
                    domain="[('state', '=', 'posted')]"
                />
                <filter
                    name="filter_done"
                    string="Done"
                    domain="[('state', '=', 'done')]"
                />
                <filter
                    name="filter_cancel"
                    string="Cancelled"
                    domain="[('state', '=', 'cancel')]"
                />
                <separator />
                <filter
                    name="filter_foreman"
                    string="Foreman"
                    domain="[('work_as', '=', 'foreman')]"
                />
                <filter
                    name="filter_extra_foreman"
                    string="Foreman I"
                    domain="[('work_as', '=', 'extra_foreman')]"
                />
                <filter
                    name="filter_clerk"
                    string="Clerk"
                    domain="[('work_as', '=', 'clerk')]"
                />
                <filter
                    name="filter_recorder"
                    string="Recorder"
                    domain="[('work_as', '=', 'recorder')]"
                />
                <separator />
                <filter name="filter_date" string="Date" date="operation_date" />
                <group expand="1" string="Group By">
                    <filter
                        string="Employee"
                        name="group_employee_id"
                        domain="[]"
                        context="{'group_by': 'employee_id'}"
                    />
                    <filter
                        string="Work as"
                        name="group_work_as"
                        domain="[]"
                        context="{'group_by': 'work_as'}"
                    />
                    <filter
                        string="Estate"
                        name="group_estate_id"
                        domain="[]"
                        context="{'group_by': 'estate_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="action_estate_premi_operation_daily_view" model="ir.actions.act_window">
        <field name="name">Premi Operation Daily</field>
        <field name="res_model">estate.premi.operation.daily</field>
        <field name="view_mode">list,kanban,pivot,form</field>
         <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No premi daily operation found. let's create one!
            </p>
            <p>
                Use this module to manage premi daily operation.
            </p>
        </field>
    </record>

    <!-- Premi Monthly -->
    <record id="estate_premi_operation_monthly_view_tree" model="ir.ui.view">
        <field name="name">estate.premi.operation.monthly.view.tree</field>
        <field name="model">estate.premi.operation.monthly</field>
        <field name="arch" type="xml">
            <list sample="1">
                <field name="name" />
                <field name="estate_id" />
                <field name="user_id" widget="many2one_avatar" />
                <field name="date_from" />
                <field name="date_to" />
                <field
                    name="state"
                    widget="badge"
                    decoration-success="state == 'posted' or state == 'done'"
                    decoration-info="state == 'draft'"
                    decoration-danger="state =='cancel'"
                />
            </list>
        </field>
    </record>

    <record id="estate_premi_operation_monthly_view_kanban" model="ir.ui.view">
        <field name="name">estate.premi.operation.monthly.view.kanban</field>
        <field name="model">estate.premi.operation.monthly</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="currency_id" />
                <field name="estate_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-6">
                                   <field
                                        name="user_id"
                                        widget="many2one_avatar_user"
                                        options="{'display_avatar_name': True}"
                                        readonly="state not in ['draft', 'verify']"
                                        class="fw-bold"
                                    />
                                </div>
                                <div class="col-6">
                                    <span class="float-end badge text-bg-secondary">
                                        <field name="state" />
                                    </span>
                                </div>
                                <div class="col-12">
                                    <b><span><field
                                                name="name"
                                                readonly="state in ['cancel', 'done', 'paid']"
                                            /></span></b>
                                </div>
                                <div class="col-12">
                                    <span>
                                        <field
                                            name="date_from"
                                            readonly="state in ['cancel', 'done', 'paid']"
                                        /> - <field
                                            name="date_to"
                                            readonly="state in ['cancel', 'done', 'paid']"
                                        />
                                    </span>
                                </div>
                                <div class="col-12">
                                    <span><field
                                            name="reference"
                                            readonly="state in ['cancel', 'done', 'paid']"
                                        /></span>
                                </div>
                                <div class="col-12">
                                    <span>Total Premi - <field
                                            name="premi_total"
                                        /></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="estate_premi_operation_monthly_view_pivot" model="ir.ui.view">
        <field name="name">estate.premi.operation.monthly.view.kanban</field>
        <field name="model">estate.premi.operation.monthly</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="date_to" type="col" />
                <field name="estate_id" type="row" />
                <field name="afdeling_premi_total" type="measure" />
                <field name="estate_premi_total" type="measure" />
                <field name="premi_total" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="estate_premi_operation_monthly_view_form" model="ir.ui.view">
        <field name="name">estate.premi.operation.monthly.view.form</field>
        <field name="model">estate.premi.operation.monthly</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_post"
                        string="Confirm"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'draft'"
                    />
                    <button
                        name="action_draft"
                        string="Reset Draft"
                        type="object"
                        class="btn-secondary"
                        invisible="state != 'cancel'"
                    />
                    <button
                        name="action_done"
                        string="Locked"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'posted'"
                    />
                    <button
                        name="action_unlock"
                        string="Unlock"
                        type="object"
                        class="btn-secondary"
                        invisible="state != 'done'"
                    />
                    <button
                        name="action_compute_premi"
                        string="Compute Premi"
                        type="object"
                        class="btn-primary"
                        invisible="state != 'draft'"
                    />
                    <button
                        name="action_cancel"
                        string="Cancel"
                        type="object"
                        class="btn-secondary"
                        invisible="state not in ('draft','posted')"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,posted"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <label for="date_from" string="Period" />
                            <div>
                                <field
                                    name="date_from"
                                    class="oe_inline"
                                    readonly="state != 'draft'"
                                /> - <field
                                    name="date_to"
                                    class="oe_inline"
                                    readonly="state != 'draft'"
                                />
                            </div>
                            <field name="estate_id" readonly="state != 'draft'" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                options="{'no_create': True, 'no_open': True}"
                                readonly="state != 'draft'"
                            />
                            <field name="company_id" invisible="1" />
                            <field name="currency_id" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="premi_computation" string="Premi Afdeling">
                            <field
                                name="afdeling_premi_ids"
                                widget="one2many_list"
                                mode="list,kanban"
                                context="{'default_line_type':'afdeling'}"
                                readonly="state != 'draft'"
                            >
                                <list editable="bottom">
                                    <field name="date_from" column_invisible="1" />
                                    <field name="date_to" column_invisible="1" />
                                    <field name="line_type" column_invisible="1" />
                                    <field
                                        name="estate_id"
                                        domain="[('parent_id', '=', parent.estate_id)]"
                                    />
                                    <field
                                        name="employee_id"
                                        widget="many2one_avatar"
                                    />
                                    <field name="currency_id" column_invisible="1" />
                                    <field name="planned_optimal" optional="show" />
                                    <field name="planned_maximum" optional="show" />
                                    <field name="actual_harvest" optional="show" />
                                    <field name="harvest_quality" optional="show" />
                                    <field name="premi_multiplier" optional="hide" />
                                    <field name="deduction" optional="show" />
                                    <field name="employee_premi" />
                                </list>
                            </field>
                        </page>
                        <page name="premi_computation" string="Premi Estate">
                            <field
                                name="estate_premi_ids"
                                widget="one2many_list"
                                mode="list,kanban"
                                context="{'default_line_type':'estate','default_estate_id':estate_id, 'estate_premi_ids': estate_premi_ids}"
                                readonly="state != 'draft'"
                            >
                                <list editable="bottom">
                                    <field name="date_from" column_invisible="1" />
                                    <field name="date_to" column_invisible="1" />
                                    <field name="line_type" column_invisible="1" />
                                    <field name="estate_id" column_invisible="1" />
                                    <field
                                        name="employee_id"
                                        widget="many2one_avatar"
                                    />
                                    <field name="premi_multiplier" />
                                    <field name="employee_premi" />
                                    <field name="currency_id" column_invisible="1" />
                                </list>
                            </field>
                        </page>
                        <page name="other_information" string="Other Information">
                            <group>
                                <group>
                                    <field name="reference" />
                                    <field
                                        name="user_id"
                                        widget="many2one_avatar"
                                        readonly="state != 'draft'"
                                    />
                                    <field
                                        name="operation_date"
                                        readonly="state != 'draft'"
                                    />
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <group col="12">
                        <group colspan="8" class="mt-3">
                            <field
                                name="note"
                                placeholder="Internal Notes ..."
                                colspan="2"
                                nolabel="1"
                            />
                        </group>
                        <!-- Totals (only invoices / receipts) -->
                        <group colspan="4">
                            <group
                                class="oe_subtotal_footer oe_right"
                                colspan="2"
                                name="penalty_total"
                            >
                                <field name="currency_id" invisible="1" />
                                <field name="afdeling_premi_total" />
                                <field name="estate_premi_total" />
                                <field
                                    name="premi_total"
                                    class="oe_subtotal_footer_separator"
                                />
                            </group>
                        </group>
                    </group>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <record id="estate_premi_operation_monthly_view_search" model="ir.ui.view">
        <field name="name">estate.premi.operation.monthly.view.search</field>
        <field name="model">estate.premi.operation.monthly</field>
        <field name="arch" type="xml">
            <search string="Premi Operation Monthly">
                <field name="name" />
                <filter
                    name="filter_draft"
                    string="Draft"
                    domain="[('state', '=', 'draft')]"
                />
                <filter
                    name="filter_posted"
                    string="Posted"
                    domain="[('state', '=', 'posted')]"
                />
                <filter
                    name="filter_done"
                    string="Done"
                    domain="[('state', '=', 'done')]"
                />
                <filter
                    name="filter_cancel"
                    string="Cancelled"
                    domain="[('state', '=', 'cancel')]"
                />
                <separator />
                <filter name="filter_date" string="Date" date="date_from" />
                <group expand="1" string="Group By">
                    <filter
                        string="Estate"
                        name="group_estate_id"
                        domain="[]"
                        context="{'group_by': 'estate_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record
        id="estate_premi_operation_monthly_view_action"
        model="ir.actions.act_window"
    >
        <field name="name">Premi Operation Monthly</field>
        <field name="res_model">estate.premi.operation.monthly</field>
        <field name="view_mode">list,kanban,pivot,form</field>
        <field name="search_view_id" ref="estate_premi_operation_monthly_view_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No premi monthly operation found. let's create one!
            </p>
            <p>
                Use this module to manage premi monthly operation.
            </p>
        </field>
    </record>

</odoo>
