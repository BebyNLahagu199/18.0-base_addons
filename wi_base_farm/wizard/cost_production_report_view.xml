<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="cost_production_report_view_form" model="ir.ui.view">
        <field name="name">cost.production.report.view.form</field>
        <field name="model">cost.production.report</field>
        <field name="arch" type="xml">
            <form string="Cost &amp; Production Report">
                <sheet>
                    <group>
                        <group>
                            <field name="date" />
                        </group>
                        <group>
                            <field name="estate_id" />
                        </group>
                    </group>
                    <footer>
                        <button
                            name="print_report"
                            string="Print"
                            type="object"
                            class="oe_highlight"
                        />
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cost_production_report_action" model="ir.actions.act_window">
        <field name="name">Cost &amp; Production Report</field>
        <field name="res_model">cost.production.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cost_production_report_view_form" />
        <field name="target">new</field>
    </record>

</odoo>
