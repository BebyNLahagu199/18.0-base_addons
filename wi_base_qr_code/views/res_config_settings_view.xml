<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.qrcode</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="55" />
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="after">
                <div id="qrcode">
                    <block title="QR Code" name="qr_code_setting_container">
                        <setting
                            id="qr_version_settings"
                            string="QR Version"
                            help="Set a Version for QR Code with value between 1 to 40."
                        >
                            <div class="content-group">
                                <label for="qr_version" string="Version" class="mr8" />
                                <field name="qr_version" />
                            </div>
                        </setting>
                        <setting
                            id="qr_error_correction_settings"
                            string="QR Error Correction"
                            help="Choose a Error Correction level of the QR Code."
                        >
                            <div class="content-group">
                                <label
                                    for="qr_error_correction"
                                    string="Error Correction"
                                    class="mr8"
                                />
                                <field name="qr_error_correction" />
                            </div>
                        </setting>
                        <setting
                            id="qr_box_size_settings"
                            string="QR Box Size"
                            help="Set a Box Size for QR Code."
                        >
                            <div class="content-group">
                                <label
                                    for="qr_box_size"
                                    string="Box Size"
                                    class="mr8"
                                />
                                <field name="qr_box_size" />
                            </div>
                        </setting>
                        <setting
                            id="qr_border_settings"
                            string="QR Border"
                            help="Set a Border for QR Code with value minimum 4."
                        >
                            <div class="content-group">
                                <label for="qr_border" string="Border" class="mr8" />
                                <field name="qr_border" />
                            </div>
                        </setting>
                        <setting
                            id="qr_logo_settings"
                            string="QR Logo"
                            help="Upload an logo for QR Code with the format of PNG."
                        >
                            <div class="content-group">
                                <label for="qr_logo" string="Logo" class="mr8" />
                                <field
                                    name="qr_logo"
                                    widget="image"
                                    options="{'size': [90,90]}"
                                />
                            </div>
                        </setting>
                        <setting
                            id="qr_key_settings"
                            string="QR API Key"
                            help="This is an API Key for QR Code encryption which is generated using Fernet library."
                        >
                            <div class="content-group">
                                <label for="qr_key" string="Key" class="mr8" />
                                <field name="qr_key" />
                            </div>
                            <div class="content-group">
                                <button
                                    type="object"
                                    name="generate_qr_api_key"
                                    string="Generate Key"
                                    class="btn-link"
                                    invisible="qr_key != False"
                                />
                                <button
                                    type="object"
                                    name="generate_qr_api_key"
                                    string="Regenerate Key"
                                    class="btn-link"
                                    invisible="qr_key == False"
                                />
                            </div>
                        </setting>
                    </block>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
