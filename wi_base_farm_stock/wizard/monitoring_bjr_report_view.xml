<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="monitoring_bjr_report_view_form" model="ir.ui.view">
        <field name="name">monitoring.bjr.report.view.form</field>
        <field name="model">monitoring.bjr.report</field>
        <field name="arch" type="xml">
            <form string="Monitoring BJR Report">
                <sheet>
                    <group>
                        <group>
                            <field name="date" />
                        </group>
                        <group>
                            <field name="estate_id" />
                        </group>
                        <group>
                            <field name="product_id" />
                        </group>
                    </group>
                    <footer>
                        <button
                            name="print_report"
                            string="Print"
                            type="object"
                            class="oe_highlight"
                        />
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="monitoring_bjr_report_action" model="ir.actions.act_window">
        <field name="name">Monitoring BJR Report</field>
        <field name="res_model">monitoring.bjr.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="monitoring_bjr_report_view_form" />
        <field name="target">new</field>
    </record>

</odoo>
