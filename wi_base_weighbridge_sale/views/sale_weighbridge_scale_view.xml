<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_weighbridge_scale_form_inherit_sale" model="ir.ui.view">
        <field name="name">weighbridge.scale.purchase.inherit.view.form</field>
        <field name="model">weighbridge.scale</field>
        <field
            name="inherit_id"
            ref="wi_base_weighbridge.view_weighbridge_scale_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='weighbridge_id']" position="after">
                <field name="sale_id" invisible="1" />
            </xpath>
            <xpath
                expr="//button[@name='action_splitted_weighbridge_scale_tree']"
                position="after"
            >
                <button
                    name="action_view_sale_order"
                    class="oe_stat_button"
                    icon="fa-shopping-cart"
                    type="object"
                    help="Form view of sale order"
                    invisible="sale_id == False"
                    groups="sales_team.group_sale_salesman"
                >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Sale Order</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="action_sale_weighbridge_scale_view" model="ir.actions.act_window">
        <field name="name">Weighbridge Scale for Sale</field>
        <field name="res_model">weighbridge.scale</field>
        <field name="view_mode">tree,form,kanban,pivot</field>
        <field name="domain">
            [
                '|',
                    '&amp;',
                        ('delivery_type', '=', 'shipment'),
                        ('is_return', '=', False),
                    '&amp;',
                        ('delivery_type', '=', 'acceptance'),
                        ('is_return', '=', True)
            ]
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                There's no Delivery yet, let's start create a Delivery!
            </p>
        </field>
    </record>
</odoo>
