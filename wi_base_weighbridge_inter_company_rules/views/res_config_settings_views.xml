<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.wb.inter.company.rules</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="wi_base_weighbridge.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='inter_companies_rules_wb']" position='attributes'>
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//div[@id='inter_companies_rules_wb']" position='after'>
                    <div class="mt16">
                    <div
                        name="module_wb_inter_company_rules_company_id"
                        invisible="not module_wi_base_weighbridge_inter_company_rules"
                    >
                        <field
                            name="wb_rule_type"
                            class="oe_inline o_light_label"
                            widget="radio"
                        />
                    </div>
                    <div
                        class="content-group"
                        name="module_inter_company_rules_set_shore_calculation"
                        invisible="not module_account_inter_company_rules"
                    >
                        <div
                            class="row ml16"
                            invisible="wb_rule_type == 'not_synchronize'"
                        >
                            <label
                                for="wb_intercompany_user_id"
                                class="col-4 col-lg-4 o_light_label"
                                string="Create As"
                            />
                            <field
                                name="wb_intercompany_user_id"
                                options="{'no_create_edit': True}"
                                require="1"
                            />
                        </div>
                    </div>
                    <div
                        class="alert alert-info"
                        role="alert"
                        invisible="wb_rule_type == 'not_synchronize' or not module_wi_base_weighbridge_inter_company_rules"
                    >
                            <field
                            name="wb_intercompany_transaction_message"
                            readonly='1'
                            class="oe_inline"
                        />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
