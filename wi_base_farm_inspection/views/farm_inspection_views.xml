<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--    Farm Inspection Tree-->
    <record id="base_farm_inspection_tree" model="ir.ui.view">
        <field name="name">base.farm.inspection.tree</field>
        <field name="model">farm.inspection</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle" />
                <field name="inspection" />
                <field name="employee_id" widget="many2one" />
                <field name="inspection_start" />
                <field name="inspection_end" />
            </list>
        </field>
    </record>

    <record id="farm_inspection_search_basic" model="ir.ui.view">
        <field name="name">farm.inspection.search.basic</field>
        <field name="model">farm.inspection</field>
        <field name="arch" type="xml">
            <search string="Inspection">
                <field name="inspection" />
                <field name="employee_id" />
                <field name="inspection_start" />
            </search>
        </field>
    </record>

    <record id="base_farm_inspection_form" model="ir.ui.view">
        <field name="name">base.farm.inspection.form</field>
        <field name="model">farm.inspection</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button
                            class="oe_stat_button"
                            icon="fa-bolt"
                            type="object"
                            name="get_issue_smart"
                        >
                            <field widget="statinfo" name="issue_all" string="Issue" />
                        </button>
                        <button
                            class="oe_stat_button"
                            icon="fa-folder-open"
                            type="object"
                            name="get_issue_smart"
                        >
                            <field widget="statinfo" name="upkeep_count" string="BKM" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" readonly="1" />
                            <field name="inspection" />
                            <field name="employee_id" widget="many2one" />
                            <field name="inspection_start" />
                            <field name="inspection_end" />
                        </group>
                        <group>
                            <field name="distance_display" />
                            <field name="duration_display" />
                            <field name="start_battery_percentage" />
                            <field name="end_battery_percentage" />
                            <field name="step" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Overview">
                            <widget name="peta" />
                        </page>
                        <page string="Issue">
                            <field name="issue_ids">
                                <list editable="bottom">
                                    <field name="states_state" column_invisible="1" />
                                    <field name="sequence" widget="handle" />
                                    <field name="date" />
                                    <field name="subject" />
                                    <field name="description" />
                                    <field name="detail_location" />
                                    <field name="block_id" widget="many2one" />
                                    <field
                                        name="states_id"
                                        widget="badge"
                                        decoration-danger="states_state == 'not_bkm'"
                                        decoration-success="states_state == 'done'"
                                        decoration-warning="states_state == 'confirmed'"
                                    />
                                    <field name="latitude" />
                                    <field name="longitude" />
                                    <field name="image_count" />
                                </list>
                            </field>
                        </page>
                        <page string="Coordinate">
                            <field name="coordinate_ids">
                                <list editable="bottom" limit="9999">
                                    <field name="sequence" widget="handle" />
                                    <field name="date" />
                                    <field name="latitude" />
                                    <field name="longitude" />
                                    <field name="accuracy" />
                                    <field name="speed" />
                                    <field
                                        name="state"
                                        widget="badge"
                                        decoration-info="state == 'not_include'"
                                        decoration-success="state == 'inc'"
                                    />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!--    Farm Inspection Action-->
    <record id="base_farm_inspection_action" model="ir.actions.act_window">
        <field name="name">Farm Inspection</field>
        <field name="res_model">farm.inspection</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'limit': 999}</field>
        <field name="search_view_id" ref="farm_inspection_search_basic" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Farm Inspection
            </p>
            <p>
                Use this menu to create a new Farm Inspection.
            </p>
        </field>
    </record>
</odoo>
