<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="weighbridge_split_scale_wizard_view" model="ir.ui.view">
        <field name="name">weighbridge.scale.split.scale</field>
        <field name="model">weighbridge.scale.split</field>
        <field name="arch" type="xml">
            <form string="Split Scale">
                <div class="oe_title">
                    <h1>
                        <field
                            name="name"
                            readonly="True"
                            force_save="1"
                            no_label="1"
                        />
                    </h1>
                </div>
                <group name="netto" string="Netto">
                    <field name="netto" no_label="1" />
                </group>
                <group name="quantity" string="Total Quantity">
                    <field name="quantity" no_label="1" />
                </group>
                <footer>
                    <button
                        name="action_split_scale"
                        id="action_split_scale"
                        string="Split Scale"
                        class="btn-primary oe-highlight"
                        type="object"
                    />

                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_weighbridge_split_scale_wizard" model="ir.actions.act_window">
        <field name="name">Split Scale</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">weighbridge.scale.split</field>
        <field name="view_id" ref="weighbridge_split_scale_wizard_view" />
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field
            name="binding_model_id"
            ref="wi_base_weighbridge.model_weighbridge_scale"
        />
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>
