<odoo>

    <record id="quality_control_01" model="weighbridge.quality.control">
        <field
            name="date"
            eval="(DateTime.today() - relativedelta(days=1)).strftime('%Y-%m-%d %H:%M')"
        />
        <field name="delivery_number">K123456</field>
        <field name="state">draft</field>
        <field name="weighbridge_scale_id" ref="weighbridge_scale_16" />
        <field
            name="penalty_ids"
            model="weighbridge.quality.control.penalty"
            eval="[(0, 0, {
                'penalty_id': ref('quality_type_water_content'),
