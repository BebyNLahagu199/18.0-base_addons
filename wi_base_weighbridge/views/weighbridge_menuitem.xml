<odoo>
    <menuitem
        id="weighbridge_menu_root"
        name="Weighbridge"
        sequence="20"
        groups="wi_base_weighbridge.weighbridge_user_group"
        web_icon="wi_base_weighbridge,static/description/icon.png"
    >
        <menuitem id="menu_overview_weighbridge_parent" name="Overview" sequence="10">
            <menuitem
                id="menu_overview_weighbridge_view_action"
                name="Overview"
                sequence="10"
                action="open_weighbridge_scale_overview_kanban"
            >
            </menuitem>
            <menuitem
                id="menu_dashboard_weighbridge_view_action"
                name="Dashboard"
                sequence="20"
                action="open_weighbridge_scale_dashboard_kanban"
            >
            </menuitem>
        </menuitem>
        <menuitem
            id="menu_operation_weighbridge_parent"
            name="Operations"
            sequence="20"
        >
            <menuitem
                id="menu_weighbridge_scale_view_action"
                name="Scale"
                sequence="10"
                action="action_weighbridge_scale_view"
            />
            <menuitem
                id="menu_weighbridge_quality_control_view_action"
                name="Quality Control"
                sequence="20"
                action="action_weighbridge_quality_control_view"
            />
            <menuitem
                id="menu_operation_weighbridge_partner"
                name="Partner"
                sequence="30"
            >
                <menuitem
                    id="menu_weighbridge_customer"
                    action="weighbridge_res_partner_action_customer"
                    sequence="31"
                />
                <menuitem
                    id="menu_weighbridge_vendor"
                    action="weighbridge_res_partner_action_vendor"
                    sequence="32"
                />
            </menuitem>
        </menuitem>
        <menuitem id="menu_weighbridge_product" name="Products" sequence="30">
            <menuitem
                id="menu_product_variant_config_stock"
                name="Products"
                action="stock.product_template_action_product"
                sequence="1"
            />
            <menuitem
                id="product_product_menu"
                name="Product Variants"
                action="stock.stock_product_normal_action"
                sequence="2"
                groups="product.group_product_variant"
            />
        </menuitem>
        <menuitem
            id="menu_reporting_weighbridge_parent"
            name="Reporting"
            sequence="40"
            groups="wi_base_weighbridge.weighbridge_manager_group"
        >
            <menuitem
                id="menu_acceptance_reporting_view_action"
                name="Acceptance"
                sequence="10"
                action="action_acceptance_reporting_view"
            />
            <menuitem
                id="menu_shipment_reporting_view_action"
                name="Shipment"
                sequence="20"
                action="action_shipment_reporting_view"
            />
            <menuitem
                id="menu_quality_control_reporting_view_action"
                name="Quality Control"
                sequence="30"
                action="action_quality_control_reporting_view"
            />
        </menuitem>
        <menuitem
            id="menu_configuration_weighbridge_parent"
            name="Configurations"
            sequence="50"
            groups="wi_base_weighbridge.weighbridge_administrator_group"
        >
            <menuitem
                id="menu_weighbridge_settings_view_action"
                name="Settings"
                sequence="10"
                action="action_weighbridge_config_settings"
                groups="base.group_system"
            />
            <menuitem
                id="menu_weighbridge_weighbridge_view_action"
                name="Weighbridge"
                sequence="20"
                action="action_weighbridge_weighbridge_view"
            />
            <menuitem
                id="menu_weighbridge_quality_type_view_action"
                name="Quality Type"
                sequence="30"
                action="action_weighbridge_quality_type_view"
            />
            <menuitem
                id="menu_manufactory_quality_type_view_action"
                name="Product Quality"
                sequence="40"
                action="base_weighbridge_quality_type_action"
            />
            <menuitem id="menu_weighbridge_management" name="Management" sequence="50">
                <menuitem
                    id="menu_product_product_categories"
                    action="product.product_category_action_form"
                    sequence="3"
                />
            </menuitem>
        </menuitem>
    </menuitem>
</odoo>
