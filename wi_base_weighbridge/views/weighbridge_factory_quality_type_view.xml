<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Factory Quality Type Tree View -->
    <record id="base_weighbridge_quality_type_tree_view" model="ir.ui.view">
        <field name="name">factory.quality.type.tree.view</field>
        <field name="model">factory.quality.type</field>
        <field name="arch" type="xml">
            <list editable="top" multi_edit="1">
                <field name="name" />
                <field name="description" />
            </list>
        </field>
    </record>

    <!-- Factory Quality Type Action -->
    <record id="base_weighbridge_quality_type_action" model="ir.actions.act_window">
        <field name="name">Quality Type</field>
        <field name="res_model">factory.quality.type</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new quality type.
            </p>
        </field>
    </record>
</odoo>
